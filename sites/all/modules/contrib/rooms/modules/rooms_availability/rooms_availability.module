    drupal_get_form('rooms_availability_filter_month_form', $month, $year),
    drupal_get_form('rooms_availability_pricing_update_form', $month, $year, $type, $rooms_units),
    array(
      '#theme' => 'pager',
      '#quantity' => $n_total_row,
      '#tags' => array(t('« first'), t('‹ previous'), '', t('next ›'), t('last »'))
