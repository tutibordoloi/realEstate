            'roomsUnitManagement' => array(
              'roomsNumber' => count($rooms_units),
              'currentMonth' => $month,
              'currentYear' => $year,
              'roomsId' => $rooms_id
            ),
          ),
          'type' => 'setting',
        )
      )
    )
  );
}


