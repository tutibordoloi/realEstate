    '#attached' => array(
      'css' => array(drupal_get_path('module', 'rooms_availability') . '/css/rooms_availability.css'),
      'js' => array(
        drupal_get_path('module', 'rooms_availability') . '/js/rooms_pricing_management.js',
        array(
